<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:layout="@layout/layout_preference_category_empty"
        app:isPreferenceVisible="false">
        <Preference
            android:layout="@layout/layout_preference_image"
            app:icon="@drawable/ic_logo_little"
            app:iconSpaceReserved="false"
            app:key="@string/key_avatar"
            app:title="@string/setting_avatar" />

        <Preference
            android:layout="@layout/layout_preference_edittext"
            app:iconSpaceReserved="false"
            app:key="@string/key_name"
            app:title="@string/login_name" />
    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/layout_preference_category_empty"
        app:isPreferenceVisible="false">

        <SwitchPreferenceCompat
            android:layout="@layout/layout_preference_switch"
            app:enabled="false"
            app:iconSpaceReserved="false"
            app:key="@string/key_beauty"
            app:title="@string/setting_beauty" />

        <SwitchPreferenceCompat
            android:enabled="false"
            android:layout="@layout/layout_preference_switch"
            app:iconSpaceReserved="false"
            app:key="@string/key_ai_noise"
            app:title="@string/setting_ai_noise" />

    </PreferenceCategory>

    <PreferenceCategory android:layout="@layout/layout_preference_category_empty">

        <io.agora.meeting.ui.widget.OptionsDialogPreference
            android:key="@string/key_notify_max_num"
            android:layout="@layout/layout_preference_edittext"
            app:iconSpaceReserved="false"
            app:title="@string/setting_turn_off_notify" />

        <io.agora.meeting.ui.widget.OptionsDialogPreference
            android:key="@string/key_max_host"
            android:layout="@layout/layout_preference_edittext"
            app:iconSpaceReserved="false"
            app:title="@string/setting_max_host" />

        <Preference
            android:key="@string/key_about"
            android:layout="@layout/layout_preference_image"
            app:icon="@drawable/ic_arrow_right"
            app:iconSpaceReserved="false"
            app:title="@string/about_title" />

    </PreferenceCategory>


</PreferenceScreen>
